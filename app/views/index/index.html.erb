<div class="posts">
  <% @posts.map do |post| %>
    <section class="post">
      <div class="user">
        <div class="avatar">
          <img src="http://creativeedtech.weebly.com/uploads/4/1/6/3/41634549/published/avatar.png?1487742111">
        </div>
        <div class="username">
          <%= post.user.username %>
        </div>
      </div>
      <%= image_tag post.image, class: 'main-image' %>
      <div class="description">
        <%= post.description %>
      </div>
    </section>
  <% end %>
  <%= paginate @posts %>
</div>
